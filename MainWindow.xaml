<Window x:Class="StickyTodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StickyTodo"
        Width="300" Height="400"
        MinWidth="200" MinHeight="200"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False">

    <Border Background="#FFFFF9C4"
        BorderBrush="#FFD6A76A"
        BorderThickness="2"
        CornerRadius="16"
        Padding="8">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="16"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}}" Value="200">
                        <Setter Property="CornerRadius" Value="8"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <TextBlock Text="Sticky TODO (shell)"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
