<Window x:Class="StickyTodoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StickyTodo"
        Width="300" Height="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False">

    <Border Background="#FFFFF9C4"
        BorderBrush="#FFD6A76A"
        BorderThickness="2"
        CornerRadius="16"
        Padding="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                          Opacity="0.4"
                          ShadowDepth="3"
                          Color="Black"/>
        </Border.Effect>

        <Grid>
            <TextBlock Text="Sticky TODO (shell)"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>
