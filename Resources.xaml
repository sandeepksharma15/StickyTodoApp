<ResourceDictionary x:Class="StickyTodoApp.Resources"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StickyTodoApp">
    <!-- Pastel sticky note colors (refreshed for better authenticity) -->
    <SolidColorBrush x:Key="NoteYellow" Color="#FFF9A1"/>
    <SolidColorBrush x:Key="NotePink" Color="#FFD5E5"/>
    <SolidColorBrush x:Key="NoteBlue" Color="#CFE8FF"/>
    <SolidColorBrush x:Key="NoteGreen" Color="#D9F5C4"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="NoteBorder" Color="#FFBDBDBD"/>
</ResourceDictionary>
