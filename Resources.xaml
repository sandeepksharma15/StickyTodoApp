<ResourceDictionary x:Class="StickyTodoApp.Resources"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StickyTodoApp">
    <!-- Pastel colors -->
    <SolidColorBrush x:Key="NoteYellow" Color="#FFFFF9C4"/>
    <SolidColorBrush x:Key="NotePink" Color="#FFFFC1E3"/>
    <SolidColorBrush x:Key="NoteBlue" Color="#FFB3E5FC"/>
    <SolidColorBrush x:Key="NoteGreen" Color="#FFC8E6C9"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="NoteBorder" Color="#FFBDBDBD"/>
</ResourceDictionary>
